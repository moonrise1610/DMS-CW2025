<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>

<StackPane fx:controller="com.comp2042.controller.GuiController"
           xmlns:fx="http:javafx.com/fxml">
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

    <Pane fx:id="gameRoot" visible="false">
        <BorderPane styleClass="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
            </center>
        </BorderPane>

        <GridPane fx:id="brickPanel" vgap="1" hgap="1" layoutX="400" layoutY="50"/>

        <Group fx:id="groupNotification" layoutX="14" layoutY="203">
            <GameOverPanel fx:id="gameOverPanel"/>
        </Group>
    </Pane>

    <VBox fx:id="mainMenu" alignment="CENTER" spacing="20" style="-fx-background-colour: white;">
        <Text text="MoonTetris" style="-fx-font-size:40px; -fx-font-family: 'Courier New';"/>

        <Button text="Lucid" onAction="#startLucidGame"
                style="-fx-font-size:20px; -fx-min-width: 200px; -fx-padding: 10;"/>

        <Button text="Whoosh!" onAction="#startWhooshGame"
                style="-fx-font-size: 20px; -fx-min-width: 200px; -fx-padding: 10;"/>

    </VBox>

</StackPane>